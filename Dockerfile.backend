# Dockerfile para Backend Strapi
FROM node:18-alpine

# Install dependencies including Python for node-gyp
RUN apk add --no-cache \
    build-base \
    gcc \
    g++ \
    autoconf \
    automake \
    zlib-dev \
    libpng-dev \
    vips-dev \
    python3 \
    make \
    git

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Install dependencies with rebuild for Alpine
RUN npm ci --only=production && \
    npm rebuild @swc/core

# Copiar c√≥digo fuente
COPY . .

# Build Strapi admin panel
ENV NODE_ENV=production
RUN npm run build

EXPOSE 1337

CMD ["npm", "run", "start"]
